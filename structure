GridItem {
  x: number
  y: number
  index: number
}
Grid<T extends GridItem> < T[][] {
  readonly width: number
  readonly height: number
  get size() => this.width * this.height
  get(x, y) => this[y][x]
  get(i) => this[Math.floor(i/this.height)][i%this.width]
  set(x, y, item: T): this
  set(i, item: T): this
  swap(): boolean
}

Piece < GridItem {
  readonly id: number
}
BasePuzzle < Grid<Piece> {
  // modify {x, y, index} of piece when set() is called
  tap(): number
}

